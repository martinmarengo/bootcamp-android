<resources>

    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextTitle.Centered" parent="TextTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextBody1">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody2">
        <item name="android:textColor">#5d5d5d</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonActionPrimary" parent="Widget.AppCompat.Button.Colored">
    </style>

</resources>
